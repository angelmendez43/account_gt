<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="reporte_libro_bancos">
            <t t-call="web.html_container">

                    <t t-call="web.external_layout">
                        <div class="page">
                            <center>
                                <h4>Libro de banco</h4> <br/><br/><br/>
                            </center>
                            <table class="table table-sm o_main_table">
                                <tbody>
                                    <tr>
                                        <td><b>Cuenta</b></td>
                                        <td><span t-esc="data['cuenta_id'][1]"/></td>
                                        <td><b>Fecha inicio:</b></td>
                                        <td><span t-esc="data['fecha_inicio']" t-options='{"widget": "date"}'/></td>
                                        <td><b>Fecha fin:</b></td>
                                        <td><span t-esc="data['fecha_fin']" t-options='{"widget": "date"}'/></td>
                                    </tr>
                                </tbody>
                            </table>
                            <table class="table table-sm o_main_table">
                                <thead>
                                    <tr>
                                        <th class="text-left">Fecha</th>
                                        <th  class="text-left">Transacción</th>
                                        <th  class="text-left">Número de cheque</th>
                                        <th  class="text-left">Nombre</th>
                                        <th  class="text-left">Descripcion</th>
                                        <th  class="text-right">Debe</th>
                                        <th  class="text-right">Haber</th>
                                        <th  class="text-right">Saldo</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td>Saldo Inicial</td>
                                        <td></td>
                                        <td></td>
                                        <td class="text-right">
                                            <span t-esc="saldo_inicial(data)" t-options="{'widget': 'monetary', 'display_currency': moneda_cuenta(data)}"/>
                                        </td>
                                    </tr>
                                    <tr t-foreach="movimientos(data)" t-as="m">
                                        <td>
                                            <span t-esc="m['fecha']" t-options='{"widget": "date"}'/>
                                        </td>
                                        <td>
                                            <span t-esc="m['transaccion']"/>
                                        </td>
                                        <td>
                                            <span t-esc="m['numero_cheque']"/>
                                        </td>
                                        <td>
                                            <span t-esc="m['nombre']"/>
                                        </td>
                                        <td>
                                            <span t-esc="m['descripcion']"/>
                                        </td>
                                        <td class="text-right">
                                             <span t-esc="m['debito']" t-options="{'widget': 'monetary', 'display_currency': m['moneda']}"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="m['credito']" t-options="{'widget': 'monetary', 'display_currency': m['moneda']}"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="m['saldo']" t-options="{'widget': 'monetary', 'display_currency': m['moneda']}"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <div id="info">
                              <p class="alignleft" style="float: left;"><strong>Hecho por:<br/> ___________________________</strong></p>
                              <p class="alignright" style="float: right;"><strong>Revisado por:<br/> ___________________________</strong></p>
                            </div>
                            <div style="clear: both;"></div>
                            <br/> 
                            <div id="info">
                              <p class="alignleft" style="float: left;"><strong></strong><strong>Vo. Bo.:<br/> ___________________________</strong></p>
                            </div>
                            <div style="clear: both;"></div>  
                        </div>
                    </t>
            </t>
        </template>

    </data>
</odoo>
